# Auto-scaling Service Configuration
# Copy this file to .env and update with your values

# Scaling Configuration
# Minimum number of container instances per service
MIN_INSTANCES=1

# Maximum number of container instances per service
MAX_INSTANCES=5

# Cooldown period in minutes between scaling actions (prevents rapid scaling)
SCALING_COOLDOWN_MINUTES=5

# Docker Configuration
# Docker network name for containers (should match your deployment network)
DOCKER_NETWORK=banking-network

# Timeout for docker run commands (seconds)
DOCKER_TIMEOUT=60

# Timeout for docker stop commands (seconds)
CONTAINER_STOP_TIMEOUT=30

# Timeout for docker query commands like ps and inspect (seconds)
DOCKER_QUERY_TIMEOUT=10

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
